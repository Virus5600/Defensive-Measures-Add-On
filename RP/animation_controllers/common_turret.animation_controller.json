{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.common_turret.death": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"look_at_target"
					],
					"transitions": [
						{
							"death": "!query.is_alive"
						}
					]
				},
				"death": {
					"animations": [
						"death_animation",
						"look_at_target"
					]
				}
			}
		}
	}
}
